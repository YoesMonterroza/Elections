@page "/votingstations/details/{VotingStationId:int}"

@if (votingStation is null)
{
    <Loading />
}
else
{
    <h3>@votingStation.Name</h3>
    <div class="mb-2">
        <a class="btn btn-primary" href="/zonigns/create/@votingStation.Id">Nueva mesa de votación</a>
        <a class="btn btn-success" href="/votingstations">Regresar</a>
    </div>

    <h4>Mesas de votacioón</h4>
    <GenericList MyList="votingStation.Zonings!.ToList()">
        <Body>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Mesa de Votación</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var zoning in votingStation.Zonings!)
                    {
                        <tr>
                            <td>
                                @zoning.ZoningNumber
                            </td>
                            <td>
                                <a class="btn btn-warning btn-sm" href="/zonings/edit/@zoning.Id">Editar</a>
                                <a class="btn btn-info btn-sm" href="/zonings/details/@zoning.Id">Detalles</a>
                                <button class="btn btn-danger btn-sm" @onclick=@(() => DeleteAsync(zoning))>Borrar</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </Body>
    </GenericList>
}
